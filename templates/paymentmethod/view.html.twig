{% extends 'base.html.twig' %}

{% block title %}Expense application - Your payment methods{% endblock %}

{% block scriptshead %}
  <script src="{{ asset('js/lib/jquery-1.12.4.js') }}"></script>
{% endblock %}

{% block body %}
<h2>Your payment methods</h2>
<div>
  <form action="{{path('payment_methods_form_add')}}" method="POST">
    <input type="submit" id="add_payment_method" value="Add new payment method" />
  </form>
</div>
<table>
  <tbody>
    <tr><th>Payment method</th><th>Edit</th><th>Delete</th></tr>
      <form id="paymentMethodForm" action="" method="POST">
        {% for item in paymentmethods %}
          <tr><td>{{item.name}}</td><td><input type="radio" name="edit" value="{{item.id}}"></td><td><input type="checkbox" name="delete_checkbox" value="{{item.id}}" /></td></tr>
        {% endfor %}
      </form>
        <tr><td></td><td></td><td><button type="button" id="delete_button">Delete</button></td></tr>
  </tbody>
</table>
{% block scriptsbody %}
    <script src="{{ asset('js/paymentMethodForm.js') }}"></script>
  {% endblock %}
{% endblock %}
