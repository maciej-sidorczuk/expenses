{% extends 'base.html.twig' %}

{% block title %}Expense application - Your categories of expenses{% endblock %}

{% block scriptshead %}
  <script src="{{ asset('js/lib/jquery-1.12.4.js') }}"></script>
{% endblock %}

{% block body %}
<h2>Your categories of expenses</h2>
<div>
  <form action="{{path('expense_categories_form_add')}}" method="POST">
    <input type="submit" id="add_category_of_expense" value="Add new category of expense" />
  </form>
</div>
<table>
  <tbody>
    <tr><th>Type of expense</th><th>Edit</th><th>Delete</th></tr>
      <form id="categoryOfExpenseForm" action="" method="POST">
        {% for item in categoriesofexpense %}
          <tr><td>{{item.name}}</td><td><input type="radio" name="edit" value="{{item.id}}"></td><td><input type="checkbox" name="delete_checkbox" value="{{item.id}}" /></td></tr>
        {% endfor %}
      </form>
        <tr><td></td><td></td><td><button type="button" id="delete_button">Delete</button></td></tr>
  </tbody>
</table>
{% block scriptsbody %}
    <script src="{{ asset('js/categoryOfExpenseForm.js') }}"></script>
  {% endblock %}
{% endblock %}
